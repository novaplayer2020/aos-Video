<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.archos.mediacenter.video.browser.BrowserActivity" >

    <TextView
        android:id="@+id/scrap_name"
        style="@style/CoverDescription.Title"
        android:textSize="24dip" />

    <LinearLayout
        android:id="@+id/scrap_director_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/VideoInfoFileInfo.Title"
            android:text="@string/scrap_director" />

        <TextView
            android:id="@+id/scrap_director"
            style="@style/VideoInfoFileInfo"
            android:paddingLeft="8dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scrap_date_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/VideoInfoFileInfo.Title"
            android:text="@string/scrap_year" />

        <TextView
            android:id="@+id/scrap_date"
            style="@style/VideoInfoFileInfo"
            android:paddingLeft="8dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scrap_rating_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/scrap_duration_label"
            style="@style/VideoInfoFileInfo.Title"
            android:text="@string/info_duration" />

        <TextView
            android:id="@+id/scrap_duration"
            style="@style/VideoInfoFileInfo"
            android:paddingLeft="8dip"
            android:layout_marginRight="50dip" />

        <TextView
            android:id="@+id/scrap_rating_label"
            style="@style/VideoInfoFileInfo.Title"
            android:text="@string/scrap_rating" />

        <TextView
            android:id="@+id/scrap_rating"
            style="@style/VideoInfoFileInfo"
            android:paddingLeft="8dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scrap_studio_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dip" >

        <TextView
            style="@style/VideoInfoFileInfo.Title"
            android:text="@string/scrap_studio" />

        <TextView
            android:id="@+id/scrap_studio"
            style="@style/VideoInfoFileInfo"
            android:paddingLeft="8dip" />
    </LinearLayout>

    <include
        android:id="@+id/play_button"
        layout="@layout/video_info_play_button"
        android:visibility="gone" />

    <TextView
        android:id="@+id/producer"
        style="@style/VideoInfoFileInfo"
        android:paddingBottom="10dip"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/scrap_trailer_title"
        style="@style/VideoInfoFileInfo.Title"
        android:text="@string/scrap_trailer" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/trailer_container"
            android:layout_height="wrap_content"></LinearLayout>

    <TextView
        android:id="@+id/scrap_cast_title"
        style="@style/VideoInfoFileInfo.Title"
        android:text="@string/scrap_cast" />

    <TextView
        android:id="@+id/scrap_cast"
        style="@style/VideoInfoFileInfo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/scrap_link_tmdb"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/tmdb_logo" />

        <ImageButton
            android:id="@+id/scrap_link_imdb"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/imdb_logo" />
    </LinearLayout>

</LinearLayout>